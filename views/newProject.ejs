         <h1 class="text-white fs-1 mb-4">Featured</h1>
         
            </div>
          </header>

        <section class="py-5">
          <div class="container">
            <div class="row justify-content-center" id="featuredArtworkContainer">
              <!-- Artwork will be dynamically loaded here -->
              <div class="col-lg-6 text-center mb-5" id="artwork1"></div>
              <div class="col-lg-6 text-center mb-5" id="artwork2"></div>
            </div>
          </div>
        </section>
       
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
  <ul class="nav nav-pills">
    <li class="nav-item"><a href="/newProject" class="btn btn-outline-primary me-2">View All Featured Projects</a></li>
    <li class="nav-item"><a href="/projects" class="btn btn-outline-primary me-2">View All Projects</a></li>
    </ul>
  </div>
        
         <div class="container-fluid"></div>
  <%- include('footer'); %>
</section>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <script type="module" src="./js/index.js"></script>
        
        <script>
          // Array of all artwork with images, descriptions, and links
          const allArtwork = [
            {
              name: "Cyber God",
              image: "images/CyberGod.PNG",
              alt: "Cyber God",
              description: "A majestic God stands atop a sunlit platform, its armor glowing with the warmth of the sun. This piece captures the essence of a hero in a cyberpunk world, where the sun's light symbolizes hope and strength in a neon-drenched environment.",
              link: "/cyberGod"
            },
            {
              name: "Neon Under Belly",
              image: "images/Neon_Under_Belly.PNG",
              alt: "Neon Under Belly",
              description: "A lone figure traverses the rain-soaked streets of a cyberpunk district, where pink neon light bathes crumbling architecture in ethereal glow. This atmospheric piece captures the solitude and beauty found in urban decay, where hope persists amidst the ruins of tomorrow.",
              link: "/neonUnderBelly"
            },
            {
              name: "Aztec Beast",
              image: "images/Aztec_Beast.PNG",
              alt: "Aztec Beast",
              description: "A fierce crocodile aztec beast stands in a neon-lit battlefield, its scales reflecting the vibrant colors of the digital world. This piece combines the primal strength of a crocodile with the advanced technology of a cyberpunk setting, creating a powerful and visually striking image.",
              link: "/aztecBeast"
            },
            {
              name: "Holy Grail",
              image: "images/HolyGrail.PNG",
              alt: "Holy Grail",
              description: "A mesmerizing fusion of ancient symbolism and futuristic architecture, this golden mandala depicts a sacred eye at the center of an intricate mechanical universe. The concentric circles represent layers of consciousness and technology merging into a singular vision of enlightenment.",
              link: "/holyGrail"
            },
            {
              name: "Spirits",
              image: "images/Spirits.PNG",
              alt: "Spirits",
              description: "Two spirits united by a shared destiny searching for an ancient technological mandala, to channel the power of a radiant orb and its pure energy. Together they represent the balance between tradition and innovation in a cyberpunk universe.",
              link: "/spirits"
            },
            {
              name: "Tribal Healer",
              image: "images/TribalHealer.PNG",
              alt: "Tribal Healer",
              description: "A formidable deity emerges from the depths of a cyberpunk pantheon, adorned in elaborate turquoise armor and crowned with an ornate headdress featuring serpent guardians. This powerful figure embodies ancient divine authority reimagined through a futuristic technological lens.",
              link: "/tribalHealer"
            },
            {
              name: "Crimson Guardian",
              image: "images/Crimson_Guardian.PNG",
              alt: "Crimson Guardian",
              description: "An imposing figure clad in ornate crimson armor adorned with intricate technological details and glowing cyan accents. This warrior stands as a sentinel in the neon-drenched streets, embodying the perfect fusion of ceremonial tradition and cutting-edge cybernetic enhancement.",
              link: "/crimsonGuardian"
            },
            {
              name: "Eternal Place of Worship",
              image: "images/Eternal_Place_of_Worship.PNG",
              alt: "Eternal Place of Worship",
              description: "A majestic cyberpunk pyramid rises from a sprawling metropolis, its ancient form transformed by pulsing neon lights and futuristic architecture. This piece explores the intersection of historical monuments and technological evolution.",
              link: "/eternalPlaceOfWorship"
            }
          ];

          // Function to randomly select 2 unique artworks
          function getRandomArtworks(artworkArray, count) {
            const shuffled = [...artworkArray].sort(() => 0.5 - Math.random());
            return shuffled.slice(0, count);
          }

          // Function to render artwork HTML
          function renderArtwork(artwork, containerId) {
            const container = document.getElementById(containerId);
            if (container) {
              container.innerHTML = `
                <h3 class="text-white mb-4">${artwork.name}</h3>
                <img src="${artwork.image}" alt="${artwork.alt}" class="img-fluid mb-4" style="max-width: 500px;">
                <p class="text-white fs-5">${artwork.description}</p>
              `;
            }
          }

          // Load random artwork when page loads
          document.addEventListener('DOMContentLoaded', function() {
            const selectedArtworks = getRandomArtworks(allArtwork, 2);
            renderArtwork(selectedArtworks[0], 'artwork1');
            renderArtwork(selectedArtworks[1], 'artwork2');
          });
        </script>
    </body>
</html>